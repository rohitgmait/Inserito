<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.event.inserito.dost.ProfileActivity"
    android:backgroundTint="#14a714"
    android:background="#14a714"><![CDATA[>

    ]]>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello"
        android:id="@+id/textView2"
        android:textColor="#accb12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/username"
        android:textColor="#accb12"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Crop"
        android:id="@+id/addCrop"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button3"
        android:textColor="#ffffff"
        android:background="#accb12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Crop"
        android:id="@+id/button3"
        android:layout_marginTop="83dp"
        android:textColor="#ffffff"
        android:background="#accb12"
        android:layout_below="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_alignStart="@+id/username" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Crop"
        android:id="@+id/viewCrop"
        android:textColor="#ffffff"
        android:background="#accb12"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button3" />

</RelativeLayout>
